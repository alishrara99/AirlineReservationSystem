<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airline Reservation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/6f433cacbe.js" crossorigin="anonymous"></script>
</head>
<body>
  
    <header>
     
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
                <div class="container">
                    @*<a style="color:white" class="navbar-brand" asp-area="" asp-controller="Reservation" asp-action="Index">Airline Reservation System</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                        <ul class="navbar-nav flex-grow-1">
                            @*<div class="dividera"></div>*@
                            <h3 style="color:#494949">|</h3>
                            
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reservation" asp-action="Index">Passengers</a>
                            </li>
                            <h3 style="color:#494949">|</h3>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <h3 style="color:#494949">|</h3>
                            <div class="dividera"></div>
                            <h3 style="color:#494949">|</h3>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                            <h3 style="color:#494949">|</h3>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>
                            <h3 style="color:#494949">|</h3>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                            <h3 style="color:#494949">|</h3>
                        </ul>
                    </div>
                </div>
            </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#303030">
        <div class="container">
            <font color="white"> &copy; 2020 - Airline Reservation System - <a asp-area="" asp-controller="Home" asp-action="About">About</a></font>
</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
